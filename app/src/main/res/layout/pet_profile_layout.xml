<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/pet_image"
            android:contentDescription="@string/pet_image_content_description"
            android:background="@color/white"
            android:src="@drawable/ic_placeholder_image"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!-- MarginLeft for API < 17 -->
    <TextView
            android:id="@+id/pet_name"
            tools:text="Kitty"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            app:layout_constraintBottom_toBottomOf="@id/pet_image"
            app:layout_constraintStart_toStartOf="@id/pet_image"/>

    <TextView
            android:id="@+id/pet_description"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginBottom="25dp"
            app:layout_constraintTop_toBottomOf="@id/pet_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Description"/>

</androidx.constraintlayout.widget.ConstraintLayout>