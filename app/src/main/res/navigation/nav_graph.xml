<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            app:startDestination="@id/homeFragment">

    <fragment android:id="@+id/homeFragment" android:name="com.example.petmatcher.home.HomeFragment"
              android:label="fragment_home" tools:layout="@layout/fragment_home"/>
    <fragment android:id="@+id/searchFragment" android:name="com.example.petmatcher.search.SearchFragment"
              android:label="fragment_search" tools:layout="@layout/fragment_search"/>
    <fragment android:id="@+id/favoritesFragment" android:name="com.example.petmatcher.favorites.FavoritesFragment"
              android:label="fragment_favorites" tools:layout="@layout/fragment_favorites">
        <action android:id="@+id/action_favoritesFragment_to_detailsFragment" app:destination="@id/detailsFragment"/>
    </fragment>
    <fragment android:id="@+id/detailsFragment" android:name="com.example.petmatcher.petdetails.DetailsFragment"
              android:label="fragment_details" tools:layout="@layout/fragment_details">
        <argument android:name="PetId" app:argType="string"/>
    </fragment>
</navigation>